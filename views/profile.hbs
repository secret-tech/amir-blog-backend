<div class="container">
    <div class="row gutters" style="margin-top: 20px">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card h-100">
                <div class="card-body" id="account" data-profile="{{id}}" data-blog="{{blog.id}}">
                    <div class="row gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <h6 class="mb-2 text-primary">Профиль</h6>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="username">username</label>
                                <input readonly type="text" class="form-control input-hidden" id="username"
                                       placeholder="{{name}}" value="{{name}}">
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="eMail">Email</label>
                                <input readonly type="email" class="form-control input-hidden" id="eMail"
                                       placeholder="{{email}}" value="{{email}}">
                            </div>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="text-right" id="updateProfile" style="display:none;">
                                <button type="button" name="submit" class="btn btn-primary">изменить</button>
                            </div>
                        </div>
                    </div>
                    <div class="row gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <h6 class="mt-3 mb-2 text-primary">Блог</h6>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="blog_name">Название</label>
                                <input readonly type="name" name="title" class="form-control input-hidden"
                                       id="blog_title"
                                       placeholder="{{blog.title}}" value="{{blog.title}}">
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="blog_desc">Описание</label>
                                <input readonly type="name" name="description" class="form-control input-hidden"
                                       id="blog_desc"
                                       placeholder="{{blog.description}}" value="{{blog.description}}">
                            </div>
                        </div>
                    </div>
                    <div class="row gutters" id="updateBlog" style="display: none">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="text-right">
                                <button type="button" name="submit" class="btn btn-primary">изменить</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<h1 class="title" style="text-align: center; margin: 40px;">{{blog.title}}</h1>
    <!-- Blog Post -->
{{#if posts.length}}
    {{#each posts}}
        {{#if isPublished}}
                <div class="card mb-4" style="margin-top: 20px">
                    <div class="card-body">
                        <a href="/posts/{{id}}" class="card-title">{{title}}</a>
                        <div class="card-text">{{{content}}}</div>
                    </div>
                    <div class="card-footer text-muted">
                        <span>{{dateFormat updatedAt "dddd, MMMM Do YYYY, h:mm:ss a"}}</span>
                    </div>
                </div>
        {{/if}}
    {{/each}}
    </div>
{{else}}
    <p>no posts</p>
{{/if}}
</div>